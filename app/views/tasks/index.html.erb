<div class="row">
  <div class="one-half column">
    <ul class="task-list">
      <% @tasks.each do |task|
          klass = if task.completed?
            'completed'
          else
            'incomplete'
          end
      %>
        <li class="task <%= klass %>" id="task-<%= task.id %>">
          <span class="name"><%= task.name %></span>
          <%= form_for(task) do |f| %>
            <%= f.hidden_field :completed, value: !task.completed %>
            <%= f.submit 'Update', class: 'button' %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="one-half column">
    <%= render 'form' %>
  </div>
</div>
